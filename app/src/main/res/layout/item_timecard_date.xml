<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_timecard_date"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvDate"
        tools:text="12/02/2021"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rvTimeCard"
        app:layout_constraintBottom_toBottomOf="@id/rvTimeCard"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/black"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="@id/tvDate"
        app:layout_constraintStart_toEndOf="@id/tvDate"
        app:layout_constraintBottom_toBottomOf="@id/tvDate"
        android:layout_width="1dp"
        android:layout_height="0dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimeCard"
        android:layout_width="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:clipChildren="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvDate"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_check" />
</androidx.constraintlayout.widget.ConstraintLayout>